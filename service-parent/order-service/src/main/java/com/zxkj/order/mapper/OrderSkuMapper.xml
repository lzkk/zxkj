<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zxkj.order.mapper.OrderSkuMapper">
    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.zxkj.order.entity.OrderSku">
        <id column="id" property="id" jdbcType="VARCHAR"/>
        <result column="category_one_id" property="categoryOneId" jdbcType="INTEGER"/>
        <result column="category_two_id" property="categoryTwoId" jdbcType="INTEGER"/>
        <result column="category_three_id" property="categoryThreeId" jdbcType="INTEGER"/>
        <result column="spu_id" property="spuId" jdbcType="VARCHAR"/>
        <result column="sku_id" property="skuId" jdbcType="VARCHAR"/>
        <result column="order_id" property="orderId" jdbcType="VARCHAR"/>
        <result column="name" property="name" jdbcType="VARCHAR"/>
        <result column="price" property="price" jdbcType="INTEGER"/>
        <result column="num" property="num" jdbcType="INTEGER"/>
        <result column="money" property="money" jdbcType="INTEGER"/>
        <result column="image" property="image" jdbcType="VARCHAR"/>
    </resultMap>
    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, category_one_id, category_two_id, category_three_id, spu_id, sku_id, order_id, name, price, num, money, image
    </sql>
    <insert id="insertAll" parameterType="com.zxkj.order.entity.OrderSku" >
        insert into order_sku
        <trim prefix="(" suffix=")" suffixOverrides="," >
            category_one_id,
            category_two_id,
            category_three_id,
            spu_id,
            sku_id,
            order_id,
            name,
            price,
            num,
            money,
            image,
        </trim>
        VALUES
        <foreach collection="paramList" separator="," item="param" index="index">
            <trim prefix="(" suffix=")" suffixOverrides="," >
                #{param.id, jdbcType=VARCHAR},
                #{param.categoryOneId, jdbcType=INTEGER},
                #{param.categoryTwoId, jdbcType=INTEGER},
                #{param.categoryThreeId, jdbcType=INTEGER},
                #{param.spuId, jdbcType=VARCHAR},
                #{param.skuId, jdbcType=VARCHAR},
                #{param.orderId, jdbcType=VARCHAR},
                #{param.name, jdbcType=VARCHAR},
                #{param.price, jdbcType=INTEGER},
                #{param.num, jdbcType=INTEGER},
                #{param.money, jdbcType=INTEGER},
                #{param.image, jdbcType=VARCHAR},
            </trim>
        </foreach>
    </insert>

    <select id="getOrderSkuByUserName" parameterType="java.lang.String" resultType="com.zxkj.order.vo.OrderSkuVo">
        SELECT
            oi.id,
            oi.pay_type,
            oi.username,
            oi.order_status,
            oi.pay_status,
            ok.sku_id,
            ok.name,
            ok.price,
            ok.num,
            ok.money
        FROM
            order_info oi
            JOIN order_sku ok ON oi.id = ok.order_id
        WHERE
            oi.username = #{username,jdbcType=VARCHAR}
    </select>
</mapper>